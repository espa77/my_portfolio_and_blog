<% content_for :title do %>
  <%= @post.title %>
<% end %>

<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Slug:</strong>
  <%= @post.slug %>
</p>

<p>
  <strong>Intro:</strong>
  <%= @post.intro %>
</p>

<p>
  <strong>Content:</strong>
  <%= markdown @post.content %>
